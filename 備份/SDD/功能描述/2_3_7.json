{
  "功能編號": "2-3-7",
  "功能名稱": "刪除錄影",
  "功能說明": "使用者在影片管理頁刪除影片時，需先確認；後端執行硬刪除：刪除 MinIO 影片物件（冪等）、刪除關聯 events，再刪除 recordings 記錄。前端刪除成功後會清空播放器並重新載入清單。",
  "程式名稱": "services/WebUIServer/app/static/js/recordings.js; services/WebUIServer/app/static/js/APIClient.js; services/APIServer/app/router/Recordings/service.py",
  "輸入": [
    "recording_id",
    "使用者確認刪除",
    "Bearer JWT"
  ],
  "輸出": [
    "OkResp（ok=true）",
    "recordings/events 資料刪除",
    "MinIO 物件刪除"
  ],
  "INPUT_PROCESS_OUTPUT": {
    "INPUT": [
      {
        "step_no": 1,
        "title": "滑鼠點選",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "點擊「刪除影片」（deleteVideoBtn）"
          }
        ]
      },
      {
        "step_no": 2,
        "title": "對話框確認",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "在 confirm 對話框選擇確定"
          },
          {
            "sub_no": "②",
            "item": "或取消刪除"
          }
        ]
      }
    ],
    "PROCESS": [
      {
        "step_no": 1,
        "title": "分支處理",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "取消：不呼叫 API，維持原狀"
          },
          {
            "sub_no": "②",
            "item": "確定：呼叫 DELETE /api/v1/recordings/{recording_id}"
          }
        ]
      },
      {
        "step_no": 2,
        "title": "資料刪除",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "後端刪除 S3 物件（recordings.s3_key）"
          },
          {
            "sub_no": "②",
            "item": "後端刪除 events（where recording_id）"
          },
          {
            "sub_no": "③",
            "item": "後端刪除 recordings（where id）並 commit"
          }
        ]
      },
      {
        "step_no": 3,
        "title": "畫面更新",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "前端清空播放器與詳細資訊，重新載入影片列表"
          },
          {
            "sub_no": "②",
            "item": "若仍有影片：自動播放新的第一筆（不更新 URL）"
          }
        ]
      }
    ],
    "OUTPUT": [
      {
        "step_no": 1,
        "title": "顯示結果",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "刪除成功：影片清單移除該項目，播放器顯示 placeholder"
          }
        ]
      }
    ]
  },
  "資料表": {
    "table_name": "recordings; events",
    "columns": [
      {
        "欄位": "s3_key",
        "中文": "影片S3路徑",
        "型態": "TEXT",
        "長度": null,
        "空值": "否",
        "預設值": null,
        "備註": "recordings.s3_key（刪除 MinIO 物件）"
      },
      {
        "欄位": "recording_id",
        "中文": "錄影ID",
        "型態": "UUID",
        "長度": null,
        "空值": "是",
        "預設值": null,
        "備註": "events.recording_id（刪除關聯事件）"
      }
    ]
  }
}
