{
  "功能編號": "2-2-1",
  "功能名稱": "新增鏡頭",
  "功能說明": "使用者在鏡頭頁輸入鏡頭名稱並提交後，前端呼叫後端建立鏡頭；後端依角色決定 user_id（一般使用者只能建立自己的鏡頭，管理員可指定），並建立 camera 記錄（預設 status=active，並自動生成 path），成功後前端重新載入鏡頭資訊與控制區塊。",
  "程式名稱": "services/WebUIServer/app/template/camera.html; services/WebUIServer/app/static/js/camera.js; services/WebUIServer/app/static/js/services/CameraService.js; services/WebUIServer/app/static/js/APIClient.js; services/APIServer/app/router/Camera/service.py; services/APIServer/app/router/Camera/DTO.py; services/APIServer/app/DataAccess/tables/camera.py",
  "輸入": [
    "name（鏡頭名稱）",
    "max_publishers（可選，預設 1）",
    "Bearer JWT（localStorage.jwt）"
  ],
  "輸出": [
    "新增 camera 記錄",
    "CameraRead（id/user_id/name/status/path/token_version...）",
    "表單錯誤訊息（若失敗顯示於 camera_name_error）"
  ],
  "INPUT_PROCESS_OUTPUT": {
    "INPUT": [
      {
        "step_no": 1,
        "title": "鍵盤輸入",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "在新增鏡頭表單輸入鏡頭名稱（camera_name）"
          }
        ]
      },
      {
        "step_no": 2,
        "title": "滑鼠點選",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "點選「建立鏡頭」送出表單"
          }
        ]
      }
    ],
    "PROCESS": [
      {
        "step_no": 1,
        "title": "資料驗證",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "前端檢查名稱不可為空；若為空顯示錯誤並停止送出"
          },
          {
            "sub_no": "②",
            "item": "後端以 CameraCreate 驗證 name 長度（max_length=128）"
          }
        ]
      },
      {
        "step_no": 2,
        "title": "資料寫入",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "前端呼叫 POST /api/v1/camera/ 建立鏡頭"
          },
          {
            "sub_no": "②",
            "item": "後端 INSERT camera（status=active、max_publishers）並生成 path"
          }
        ]
      },
      {
        "step_no": 3,
        "title": "畫面更新",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "建立成功：清空表單並重新載入鏡頭清單，顯示鏡頭資訊與操作區"
          },
          {
            "sub_no": "②",
            "item": "建立失敗：顯示錯誤訊息於 camera_name_error"
          }
        ]
      }
    ],
    "OUTPUT": [
      {
        "step_no": 1,
        "title": "顯示結果",
        "sub_steps": [
          {
            "sub_no": "①",
            "item": "新增成功：顯示鏡頭資訊卡（名稱/狀態/串流狀態）與操作按鈕"
          },
          {
            "sub_no": "②",
            "item": "新增失敗：顯示表單錯誤"
          }
        ]
      }
    ]
  },
  "資料表": {
    "table_name": "camera",
    "columns": [
      {
        "欄位": "id",
        "中文": "鏡頭ID",
        "型態": "UUID",
        "長度": null,
        "空值": "否",
        "預設值": "uuid7",
        "備註": "Primary Key"
      },
      {
        "欄位": "user_id",
        "中文": "使用者ID",
        "型態": "INTEGER",
        "長度": null,
        "空值": "否",
        "預設值": null,
        "備註": "ForeignKey(users.id)；索引"
      },
      {
        "欄位": "name",
        "中文": "鏡頭名稱",
        "型態": "VARCHAR",
        "長度": 128,
        "空值": "否",
        "預設值": null,
        "備註": null
      },
      {
        "欄位": "status",
        "中文": "鏡頭狀態",
        "型態": "ENUM",
        "長度": null,
        "空值": "否",
        "預設值": "inactive",
        "備註": "CameraStatusEnum"
      },
      {
        "欄位": "path",
        "中文": "串流路徑",
        "型態": "VARCHAR",
        "長度": 64,
        "空值": "是",
        "預設值": null,
        "備註": "唯一；索引"
      },
      {
        "欄位": "token_version",
        "中文": "Token版本",
        "型態": "INTEGER",
        "長度": null,
        "空值": "否",
        "預設值": 0,
        "備註": null
      },
      {
        "欄位": "last_seen_at",
        "中文": "最後上線時間",
        "型態": "TIMESTAMP WITH TIME ZONE",
        "長度": null,
        "空值": "是",
        "預設值": null,
        "備註": null
      },
      {
        "欄位": "max_publishers",
        "中文": "最大推流者數量",
        "型態": "INTEGER",
        "長度": null,
        "空值": "否",
        "預設值": 1,
        "備註": null
      },
      {
        "欄位": "created_at",
        "中文": "建立時間(UTC)",
        "型態": "TIMESTAMP WITH TIME ZONE",
        "長度": null,
        "空值": "否",
        "預設值": "timezone('UTC', now())",
        "備註": "TimestampMixin"
      },
      {
        "欄位": "updated_at",
        "中文": "更新時間(UTC)",
        "型態": "TIMESTAMP WITH TIME ZONE",
        "長度": null,
        "空值": "是",
        "預設值": null,
        "備註": "TimestampMixin；更新時由資料庫 onupdate"
      }
    ]
  }
}
